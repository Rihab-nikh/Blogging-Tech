@model Models.UserVM;

@{
    ViewData["Title"] = "Settings";
}


<h2>Change Password</h2>
<form asp-controller="Setting" asp-action="ChangePassword" method="post">
    <div class="form-group">
        <label >Current Password</label>
        <input type="password" class="form-control" />
        <span  class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">New Password</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Change Password</button>
</form>


<hr />

<h2>Change Profile Picture</h2>
<form asp-controller="Setting" asp-action="ChangeProfilePicture" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ProfileImage">Upload New Profile Picture</label>
        <input asp-for="ProfileImage" type="file" class="form-control-file" />
        <span asp-validation-for="ProfileImage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Upload Picture</button>
</form>

<hr />

<h2>Change Email</h2>
<form asp-controller="Setting" asp-action="ChangeEmail" method="post">
    <div class="form-group">
        <label asp-for="Email">New Email Address</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Change Email</button>
</form>
